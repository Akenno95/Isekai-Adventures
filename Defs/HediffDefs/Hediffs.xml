<?xml version="1.0" encoding="utf-8"?>
<Defs>

		
		<HediffDef ParentName="DiseaseBase">
			<defName>Isekai_Pain_Resistance</defName>
			<label>Pain resistance</label>
			<description>The ability to resist pain.</description>
			<isBad>true</isBad>
			<initialSeverity>1</initialSeverity>
			<maxSeverity>10</maxSeverity>
			<stages>
				<li>
					<label>tiny</label>
					<painFactor>0.9</painFactor>
				</li>
				<li>
					<minSeverity>3</minSeverity>
					<label>minor</label>
					<painFactor>0.8</painFactor>
				</li>
				<li>
					<minSeverity>5</minSeverity>
					<label>moderate</label>
					<painFactor>0.7</painFactor>
				</li>
				<li>
					<minSeverity>7</minSeverity>
					<label>good</label>
					<painFactor>0.6</painFactor>
				</li>
				<li>
					<minSeverity>10</minSeverity>
					<label>high</label>
					<painFactor>0.5</painFactor>
				</li>
			</stages>

		</HediffDef>		
		
		
		<HediffDef ParentName="DiseaseBase">
			<defName>Isekai_Pain_Nullification</defName>
			<label>Pain nullification</label>
			<description>The ability to nullify pain.</description>
			<isBad>true</isBad>
			<maxSeverity>1</maxSeverity>
			<stages>
				<li>
					<painFactor>0</painFactor>
					<!--naturalHealingFactor>100</naturalHealingFactor>
					<totalBleedFactor>0</totalBleedFactor>
					<regeneration MayRequire="Ludeon.RimWorld.Anomaly">1000</regeneration-->
					
						
				</li>
			</stages>

		</HediffDef>
		
		
		<HediffDef ParentName="DiseaseBase">
			<defName>Isekai_MentalBreak_Nullification</defName>
			<label>Mental break nullification</label>
			<description>The ability to nullify mental breaks.</description>
			<isBad>true</isBad>
			<maxSeverity>1</maxSeverity>
			<stages>
				<li>
					<blocksMentalBreaks MayRequire="Ludeon.RimWorld.Anomaly">true</blocksMentalBreaks>	
				</li>
			</stages>

		</HediffDef>
		
		
		<HediffDef ParentName="DiseaseBase">
			<defName>Isekai_Magic_MPStrain</defName>
			<label>MP strain</label>
			<description>Pawn needs to rest to recover from using too much MP.</description>
			<isBad>true</isBad>
			<initialSeverity>0</initialSeverity>
			<maxSeverity>1</maxSeverity>
			<comps>
				<li Class="HediffCompProperties_SeverityPerDay">
					<severityPerDay>-0.5</severityPerDay>
					<showDaysToRecover>true</showDaysToRecover>
				</li>
			</comps>
			<stages>
				<li>
					<capMods>
						<li>
							<capacity>Consciousness</capacity>
							<setMax>0.1</setMax>
						</li>
					</capMods>
				</li>
			</stages>

		</HediffDef>


</Defs>
