<?xml version="1.0" encoding="utf-8"?>
<Defs>

		<!-- Slash -->
		<ThingDef ParentName="BaseBullet">
			<defName>Isekai_SlashProjectile</defName>
			<label>Slash shot</label>
			<graphicData>
				<texPath>Projectile/WindCut</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<shaderType>MoteGlow</shaderType>
				<drawSize>1</drawSize>
			</graphicData>
			<!--thingClass>Bullet</thingClass-->
			<projectile>
				<speed>30</speed>
				<damageDef>Isekai_SlashDamage</damageDef>
				<damageAmountBase>10</damageAmountBase>
				<armorPenetrationBase>0.1</armorPenetrationBase>
				<stoppingPower>1</stoppingPower>
			</projectile>
			<comps>
			</comps>
		</ThingDef>

	<!-- Aspectual Skilltree -->

		<!-- Slash -->

			<ThingDef ParentName="BaseBullet">
				<defName>Isekai_Projectile_WindSlash</defName>
				<label>Wind slash</label>

				<thingClass>IsekaiAdventures.Bullet_Scaling</thingClass>

				<graphicData>
					<texPath>Projectile/WindCut</texPath>
					<graphicClass>Graphic_Single</graphicClass>
					<shaderType>MoteGlow</shaderType>
					<drawSize>1</drawSize>
				</graphicData>

				<projectile>
					<damageDef>Isekai_SlashDamage</damageDef>
					<damageAmountBase>10</damageAmountBase>
					<armorPenetrationBase>0.1</armorPenetrationBase>
					<stoppingPower>1</stoppingPower>
					<speed>50</speed>
					<!-- <extraDamages>
						<li>
							<def>Isekai_SlashDamage</def>
							<amount>50</amount>
							<armorPenetration>0</armorPenetration>
							<chance>90</chance>
						</li>
					</extraDamages> -->
				</projectile>

				<comps>
				</comps>
				<modExtensions>
					<li Class="IsekaiAdventures.ModExt_ProjectileScaling">
						<!-- Stat Description
							✅ damageStat = Der Stat, dessen Wert in Punkte übersetzt wird.
							✅ damageMultiplier = Der Faktor, der angibt, wie stark damageStat in Punkte übersetzt wird.
							✅ damageMultiplierStat = Multiplier-Stat für den gesamten Schaden (Base + Flat).
							✅ damageMultiplierScale = Umrechnungsfaktor, um damageMultiplierStat sinnvoll in einen Multiplikator zu verwandeln (z. B. Prozentwerte → Faktor). -->
						<flatBonusStat>Isekai_Magic_Damage</flatBonusStat>
						<flatBonusFactor>1.0</flatBonusFactor>
						<damageMultStat>Isekai_Stat_Wind_DamageMultiplier</damageMultStat>
						<damageMultScale>1.0</damageMultScale>
						<armorPenetrationStat>Isekai_Stat_Wind_Penetration</armorPenetrationStat>
						<armorPenetrationFactor>1.0</armorPenetrationFactor>
					</li>
				</modExtensions>
			</ThingDef>











</Defs>
