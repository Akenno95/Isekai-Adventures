<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Spirits -->

		<!-- Wind Spirit -->

			<HediffDef ParentName="IsekaiSpirit">
				<defName>Isekai_Hediff_Spirit_Wind</defName>
				<label>Wind Spirit</label>
				<description>Blessed by a wind spirit. Greater forms may give more advantages.</description>
				<defaultLabelColor>(0.0, 0.8, 0.0)</defaultLabelColor>
				<stages>
					<li>
						<label>lesser</label>
						<statOffsets>
							<ArmorRating_Isekai_Wind>0.2</ArmorRating_Isekai_Wind>
							<ArmorRating_Heat>-0.1</ArmorRating_Heat>
							<MoveSpeed>0.2</MoveSpeed>
							<CrawlSpeed>0.04</CrawlSpeed>
							<CaravanRidingSpeedFactor>0.1</CaravanRidingSpeedFactor>
							<ToxicResistance>0.2</ToxicResistance>
							<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.2</ToxicEnvironmentResistance>
						</statOffsets>
					</li>
					<li>
						<minSeverity>2</minSeverity>
						<label>medium</label>
						<statOffsets>
							<ArmorRating_Isekai_Wind>0.5</ArmorRating_Isekai_Wind>
							<ArmorRating_Heat>-0.2</ArmorRating_Heat>
							<MoveSpeed>0.5</MoveSpeed>
							<CrawlSpeed>0.07</CrawlSpeed>
							<CaravanRidingSpeedFactor>0.2</CaravanRidingSpeedFactor>
							<ToxicResistance>0.5</ToxicResistance>
							<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.5</ToxicEnvironmentResistance>
						</statOffsets>
					</li>
					<li>
						<minSeverity>3</minSeverity>
						<label>greater</label>
						<statOffsets>
							<ArmorRating_Isekai_Wind>0.7</ArmorRating_Isekai_Wind>
							<ArmorRating_Heat>-0.3</ArmorRating_Heat>
							<MoveSpeed>1.0</MoveSpeed>
							<CrawlSpeed>0.1</CrawlSpeed>
							<CaravanRidingSpeedFactor>0.5</CaravanRidingSpeedFactor>
							<ToxicResistance>1</ToxicResistance>
							<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1</ToxicEnvironmentResistance>
						</statOffsets>
					</li>
				</stages>
				<comps>
				</comps>
			</HediffDef>

