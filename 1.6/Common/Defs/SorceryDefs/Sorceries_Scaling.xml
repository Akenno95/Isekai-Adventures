	<!-- Magic -->

		<!-- Wind -->

			<ItsSorceryFramework.SorceryDef ParentName="Isekai_SorceryScaling_Wind">
				<defName>Isekai_WindSlash</defName>
				<label>Wind slash scaling</label>
				<description>Slashing the wind.</description>
				<level>1</level>
				<iconPath>Projectile/WindCut</iconPath>
				<!--warmupSound>...</warmupSound-->
				<aiCanUse>true</aiCanUse>
				<cooldownTicksRange>200</cooldownTicksRange>  <!-- 60 ticks = 1 sec -->
			
				<statBases>
					<Isekai_MPCost>50</Isekai_MPCost>
					<!-- <Ability_Duration>5</Ability_Duration> -->
				</statBases>
				<verbProperties>		
					<defaultProjectile>Isekai_Projectile_WindSlash</defaultProjectile>
					
					<burstShotCount>2</burstShotCount>
					<ticksBetweenBurstShots>6</ticksBetweenBurstShots>
					<warmupTime>1.0</warmupTime>
					<range>10</range>

					<accuracyTouch>0.9</accuracyTouch>
					<accuracyShort>0.8</accuracyShort>
					<accuracyMedium>0.7</accuracyMedium>
					<accuracyLong>0.6</accuracyLong>

					<soundCast>Heatspikes_Shot</soundCast>
					<soundCastTail>Heatspikes_Tail</soundCastTail>
					<muzzleFlashScale>9</muzzleFlashScale>

					<ai_IsWeapon>false</ai_IsWeapon>

					<requireLineOfSight>True</requireLineOfSight>
					<targetParams>
						<canTargetLocations>true</canTargetLocations>
					</targetParams>
				</verbProperties>

				<comps>
				</comps>
				<modExtensions>
					<li Class="IsekaiAdventures.MDO_BurstScaling">
						<burstCountMode>BasePlusAddThenMultiply</burstCountMode>
						<ticksBetweenMode>BasePlusAdd</ticksBetweenMode>

						<minShots>1</minShots>
						<maxShots>20</maxShots>
						<minTicksBetween>0</minTicksBetween>
						<maxTicksBetween>25</maxTicksBetween>

						<burstCountStat>Isekai_Magic_BurstShotCount</burstCountStat>
						<!-- <burstMultiplierStat></burstMultiplierStat> -->
						<ticksBetweenStat>Isekai_Magic_TicksBetween</ticksBetweenStat>
						<cooldownFactorStat>Isekai_Magic_Cooldown</cooldownFactorStat>
						<!-- optional -->
						<!-- <damageFactorStat>Isekai_Magic_Damage</damageFactorStat> -->
					</li>
			</modExtensions>
			</ItsSorceryFramework.SorceryDef>



</Defs>